{
  "name": "tradeit",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/server",
    "packages/web",
    "packages/shared"
  ],
  "scripts": {
    "build": "npm run build --workspace @tradeit/server && npm run build --workspace @tradeit/web",
  "dev": "npm-run-all --parallel dev:shared dev:server dev:matcher dev:gateway dev:web",
    "dev:shared": "npm run watch --workspace @tradeit/shared",
    "dev:server": "npm run dev --workspace @tradeit/server",
  "dev:matcher": "npm run dev:matcher --workspace @tradeit/server",
  "dev:gateway": "npm run dev:gateway --workspace @tradeit/server",
    "dev:web": "npm run dev --workspace @tradeit/web",
    "lint": "npm-run-all lint:*",
    "lint:server": "npm run lint --workspace @tradeit/server",
    "lint:web": "npm run lint --workspace @tradeit/web",
    "lint:shared": "npm run lint --workspace @tradeit/shared",
    "test": "npm-run-all test:*",
    "test:server": "npm run test --workspace @tradeit/server",
    "test:web": "npm run test --workspace @tradeit/web",
    "format": "npm-run-all format:*",
    "format:server": "npm run format --workspace @tradeit/server",
    "format:web": "npm run format --workspace @tradeit/web",
    "format:shared": "npm run format --workspace @tradeit/shared",
  "postinstall": "node scripts/postinstall.cjs"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "optionalDependencies": {
    "@esbuild/darwin-arm64": "^0.25.10"
  }
}
